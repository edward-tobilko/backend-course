{
  "name": "backend_course",
  "version": "1.0.0",
  "description": "Express REST API backend course pet-project",
  "type": "commonjs",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=--enable-source-maps tsx watch src/server.ts",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "debug:build": "yarn build && cross-env NODE_OPTIONS='--enable-source-maps --inspect=9229' node dist/server.js"
  },
  "dependencies": {
    "express": "^5.1.0",
    "zod": "^4.1.5",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "cross-env": "^10.0.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "nodemon": "^3.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edward-tobilko/backend-course.git"
  },
