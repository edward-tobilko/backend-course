{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": "src",
    "types": ["jest", "node"],

    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true, // * для коректной работы с отладчиком ( debugger in devtools )
    "inlineSources": true, // * для коректной работы с отладчиком ( debugger in devtools )
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["src"], // * ← важно!
  "exclude": ["dist", "node_modules"]
}
