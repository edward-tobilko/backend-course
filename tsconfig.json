{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "rootDir": "src",
    "types": ["jest", "node"],
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true, // для коректної роботи з відкладкою ( debugger in devtools )
    "inlineSources": true, // для коректної роботи з відкладкою ( debugger in devtools )
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "paths": { "@/*": ["./*"] }
  },
  "include": ["src"] // ← важливо
}
