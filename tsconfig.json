{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./", // або "./server"
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"], // підказки для Node API
    "sourceMap": true, // для коректної роботи з відкладкою ( debugger in devtools )
    "inlineSources": true // для коректної роботи з відкладкою ( debugger in devtools )
  },
  "include": ["server/**/*.ts", "src/**/*.ts", "theory/**/*.ts"], // ← важливо
  "exclude": ["node_modules", "dist"]
}
