{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./", // або "./server"
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"] // підказки для Node API
  },
  "include": ["server/**/*.ts", "theory/**/*.ts"], // ← важливо
  "exclude": ["node_modules", "dist"]
}
